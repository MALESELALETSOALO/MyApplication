            android:layout_marginLeft="10dp"
            android:layout_weight="1.4"
            android:hint="points"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:singleLine="true" />
    </LinearLayout>
    <!-- fourth Child Layout -->
    <LinearLayout
        android:id="@+id/fourthLayout"
